@model IEnumerable<IntroductionToASPNETMVC.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2><span class="glyphicon glyphicon-music"></span> Albums</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="https://addons.cdn.mozilla.net/user-media/addon_icons/446/446652-64.png?modified=1371331225" alt="The Dark Side of the Moon" class="img-responsive img-circle" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
